<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="strangerforfallen@gmail.com">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="passenger"/>
            </not>
        </preConditions>

        <createTable tableName="passenger">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="passenger">
            <column name="name" value ="Arthur"/>
            <column name="email" value ="sobak@gmail.com"/>
            <column name="phone" value ="+375292222333"/>
            <column name="status" value ="NOT_IN_RIDE"/>
        </insert>

        <rollback>
            <dropTable tableName="passenger"/>
        </rollback>
    </changeSet>

</databaseChangeLog>